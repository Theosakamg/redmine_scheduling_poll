<% if @project.module_enabled?(:scheduling_polls) %>
<hr />
<% if User.current.allowed_to?(:view_schduling_polls, @project) %>
<div class="scheduling_poll">
<% scheduling_poll = SchedulingPoll.find_by(:issue => @issue) %>
<% if scheduling_poll %>
<% vote_values = Hash[*SchedulingPollsController.helpers.scheduling_vote_values_array.flatten] %>
  <div class="contextual">
    <%= link_to 'Vote', scheduling_poll_path(scheduling_poll) %>
  </div>
  <p><strong>Scheduling Poll</strong></p>
  <div>
    <table class="list">
      <thead>
        <tr>
          <th><!-- name --></th>
          <% vote_values.each_pair do |k,v| %>
            <%= content_tag :th, v %>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% scheduling_poll.scheduling_poll_item.each_with_index do |item,i| %>
        <tr class="<%= (i % 2 == 0)? 'odd' : 'even' %>">
          <%= content_tag :td, item.text %>
          <% vote_values.each_pair do |k,v| %>
            <%= content_tag :td, item.scheduling_vote.where(:value => k).length %>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% else # unless scheduling_poll %>
  <div class="contextual">
    <%= link_to 'Add', scheduling_polls_new_path(:issue => @issue) %>
  </div>
  <p><strong>Scheduling Poll</strong></p>
<% end %>
<% else %><%# unless User.current.allowed_to?(:view_schduling_polls, @project) %>
  <p><strong>Scheduling Poll</strong></p>
<% end %>
</div>

<% end %><%# @project.module_enabled?(:scheduling_polls) %>
